{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "description": "Schema for a person in the Yaademan memorial",
  "type": "object",
  "required": [
    "id",
    "firstName",
    "lastName",
    "status"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier (slug format: firstname-lastname-randomid)",
      "pattern": "^[a-z0-9-]+$",
      "minLength": 5,
      "maxLength": 100
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "age": {
      "type": ["integer", "null"],
      "minimum": 0,
      "maximum": 150
    },
    "birthDate": {
      "type": ["string", "null"],
      "format": "date",
      "description": "ISO 8601 date format: YYYY-MM-DD"
    },
    "deathDate": {
      "type": ["string", "null"],
      "format": "date"
    },
    "causeOfDeath" : {
      "type": ["string", "null"],
      "maxLength": 500
    },
    "incidentDate": {
      "type": ["string", "null"],
      "format": "date"
    },
    "location": {
      "type": "object",
      "properties": {
        "city": {
          "type": ["string", "null"],
          "maxLength": 100
        },
        "country": {
          "type": "string",
          "default": "Iran"
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["unknown", "killed", "arrested", "missing", "released"],
      "description": "Current status of the person"
    },
    "description": {
      "type": "object",
      "properties": {
        "fa": {
          "type": ["string", "null"],
          "maxLength": 5000
        },
        "en": {
          "type": ["string", "null"],
          "maxLength": 5000
        }
      }
    },
    "events": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "Event ID references"
      },
      "uniqueItems": true
    },
    "images": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "Relative path to image file"
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["url", "title"],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          },
          "title": {
            "type": "string",
            "maxLength": 200
          },
          "type": {
            "type": "string",
            "enum": ["news", "social_media", "video", "document", "other"],
            "default": "other"
          }
        }
      }
    },
    "verified": {
      "type": "boolean",
      "default": true,
      "description": "Whether the information has been verified"
    },
    "published": {
      "type": "boolean",
      "default": true,
      "description": "Whether the memorial is publicly visible"
    }
  }
}